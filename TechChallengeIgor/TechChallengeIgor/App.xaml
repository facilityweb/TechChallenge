<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechChallengeIgor.App">
	<Application.Resources>
        <Color x:Key="primary">#89c064</Color>
        <Color x:Key="light">#FFFFFF</Color>
        <Style x:Key="btn" TargetType="Button">
            <Setter Property="BorderRadius" Value="4" />
            <Setter Property="TextColor" Value="{StaticResource light}" />
            <Setter Property="BackgroundColor" Value="Transparent" />
        </Style>
        <Style x:Key="btn-primary" TargetType="Button" BasedOn="{StaticResource btn}">
            <Setter Property="BackgroundColor" Value="{StaticResource primary}" />
        </Style>
    </Application.Resources>
</Application>